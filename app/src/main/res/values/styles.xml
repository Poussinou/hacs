<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="@attr/libNameStyle">@style/LibName</item>
        <item name="@attr/libLicenseStyle">@style/LibLicense</item>
    </style>


    <style name="bigButton">
        <item name="android:padding">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin" >3dp</item>
        <item name="android:textSize" >30sp</item>
    </style>

    <style name="Theme.Dialog" parent="@android:style/Theme.Dialog" />

    <style name="LibName">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <style name="LibLicense">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
